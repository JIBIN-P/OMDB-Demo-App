<% include partials/header %>

<h1>There are <em><%= count %></em> search results for movie <em><%= query %></em></h1>

<% if(data["Response"] == "False"){ %>
   <p><%= message %></p>
<% } else{ %>
   <ul>
      <% data["Search"].forEach(movie => { %>
      <li>
         <strong>
            <%= movie["Title"] %></strong> -
         <%= movie["Year"] %>
      </li>
      <% }) %>
   </ul>
<% } %>

<a href="/">Go Back?</a>
<% include partials/footer %>